<marlin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ilcsoft.desy.de/marlin/marlin.xsd">
 <execute>
  <processor name="MyAIDAProcessor"/>
  <group name="TrackEfficiency"/>  
  <XXXprocessor name="MyCEDViewer"/>
  <!--processor name="MyAnaTrack"/-->  
 </execute>

 <global>
  <parameter name="LCIOInputFiles"> 
       /scratch/hh/lustre/ilc/gaede/clupa_ana_taupair.slcio
     <!-- ana_taupair.slcio
      /afs/naf.desy.de/user/g/gaede/home/tmp/ILD_00_K0S_pipi_Theta5-175_5-25Gev_000_REC.slcio
ttbar_100evts.slcio clupa_ana.slcio clupa_mu+.slcio--> </parameter>
  <!-- limit the number of processed records (run+evt): -->  
  <parameter name="MaxRecordNumber" value="0" />  
  <parameter name="SkipNEvents" value="0" />  
  <parameter name="SupressCheck" value="false" />  
  <parameter name="GearXMLFile"> gear_ILD_00.xml </parameter>  
  <parameter name="Verbosity" options="DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT"> MESSAGE DEBUG3  </parameter> 
 </global>

 <processor name="MyAIDAProcessor" type="AIDAProcessor">
 <!--Processor that handles AIDA files. Creates on directory per processor.  Processors only need to create and fill the histograms, clouds and tuples. Needs to be the first ActiveProcessor-->
  <!-- compression of output file 0: false >0: true (default) -->
  <parameter name="Compress" type="int">1 </parameter>
  <!-- filename without extension-->
  <parameter name="FileName" type="string">trkeff</parameter>
  <!-- type of output file root (default) or xml )-->
  <parameter name="FileType" type="string">root </parameter>
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <!--parameter name="Verbosity" type="string">DEBUG </parameter-->
</processor>


<group name="TrackEfficiency">
  <!--Name of the input collections with Tracks-->
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <!--parameter name="Verbosity" type="string">DEBUG </parameter-->
  <!--Name of the input collections with MCParticles-->
  
  <processor name="clupa_ttbar" type="TrackEfficiency">
    <parameter name="TrackMCPRelation" type="string" lcioInType="LCRelation"> ClupatraTrackMCTruthLink </parameter>
    <parameter name="PtRange" type="FloatVec">0. 100.</parameter>
    <parameter name="TrackCollection" type="string" lcioInType="Track">ClupatraTracks</parameter>
    <!--parameter name="Verbosity" type="string">DEBUG </parameter-->
  </processor>

  <processor name="tpc_ttbar" type="TrackEfficiency">
    <parameter name="TrackMCPRelation" type="string" lcioInType="LCRelation"> TPCTrackMCTruthLink </parameter>
    <parameter name="PtRange" type="FloatVec">0. 100.</parameter>
    <parameter name="TrackCollection" type="string" lcioInType="Track">TPCTracks</parameter>
  </processor>

  <processor name="ldc_ttbar" type="TrackEfficiency">
    <parameter name="TrackMCPRelation" type="string" lcioInType="LCRelation"> LDCTrackMCTruthLink </parameter>
    <parameter name="PtRange" type="FloatVec">0. 100.</parameter>
    <parameter name="TrackCollection" type="string" lcioInType="Track">LDCTracks</parameter>
  </processor>
</group>


 <processor name="MyCEDViewer" type="CEDViewer">
 <!--CEDViewer: event display of LCIO objects  - based on CED by A.Zhelezov.-->
  <!--collection to be displayed ( ColName, marker type[0-2], size)-->
  <!--parameter name="DrawCollection" type="StringVec">CalorimeterHits 0 3  </parameter-->
  <!--collection to be displayed ( ColName, marker type[0-2], size, layer)-->
  <parameter name="DrawInLayer" type="StringVec">
    ClupatraTracks  0 3 1
    MCParticleTracks_clupa_ttbar 0 3 2
    MCParticleTracksFound_clupa_ttbar 2 3 3

    TPCTracks  0 3 11
    MCParticleTracks_tpc_ttbar 0 3 12
    MCParticleTracksFound_tpc_ttbar 2 3 13

    LDCTracks 0 3 15    

    MCParticlesSkimmed 0 1 4
  </parameter>
  <!--verbosity level of this processor ("DEBUG0-4,MESSAGE0-4,WARNING0-4,ERROR0-4,SILENT")-->
  <!--parameter name="Verbosity" type="string">DEBUG </parameter-->
</processor>




</marlin>
